{
  "name": "localbot",
  "version": "1.0.0",
  "description": "LocalBot - TypeScript Agent for Local LLMs with Telegram Integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "localbot": "./src/cli/index.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "chat": "tsx src/terminal/ui.ts",
    "bot": "tsx src/telegram/bot.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ollama",
    "llm",
    "agent",
    "telegram",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^25.0.9",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.6.2",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "ollama": "^0.6.3",
    "ora": "^9.0.0",
    "playwright": "^1.57.0",
    "readline": "^1.3.0",
    "telegraf": "^4.16.3",
    "uuid": "^13.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  }
